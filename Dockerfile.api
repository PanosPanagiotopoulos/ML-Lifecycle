FROM python:3.11-slim

WORKDIR /app

# Install dependencies (API-only, lightweight)
COPY requirements-api.txt ./
RUN pip install --no-cache-dir -r requirements-api.txt

# Copy application code
COPY src ./src

# Create directories
RUN mkdir -p artifacts/model logs

# Expose API port
EXPOSE 8000

# Run API server
CMD ["uvicorn", "src.controller.predict:app", "--host", "0.0.0.0", "--port", "8000"]